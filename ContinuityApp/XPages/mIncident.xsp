<?xml version="1.0" encoding="UTF-8"?>
<xp:view xmlns:xp="http://www.ibm.com/xsp/core" xmlns:xc="http://www.ibm.com/xsp/custom">

	<xp:this.beforePageLoad><![CDATA[#{javascript:var numOpenTasks = 0;

var t = @DbLookup( @DbName(), "vwTasksAssignedOpen", docIncident.getItemValueString("id"), 2, "[FailSilent]");

if (t != null && t != "") {
	numOpenTasks = @Elements(t);
}

//dBar.debug("num open: " + numOpenTasks);

viewScope.put("numOpenTasks", numOpenTasks);
}]]></xp:this.beforePageLoad>
	

	<xp:this.data>
		<xp:dominoDocument var="docIncident" formName="fIncident"></xp:dominoDocument>
	</xp:this.data>
	
	<xc:mLayout showMenu="true" pageTitle="Activate team">
	<xp:this.facets>
	
		<xp:panel xp:key="contents" disableOutputTag="true">

					<div id="formholder">
						<h2>
							<xp:text escape="true" id="title" tagName="span"
								value="Incident" styleClass="formtitle">
							</xp:text>
						</h2>
						<xp:panel id="topbuttons" styleClass="buttons" tagName="ul">
							<xp:panel id="editbutton" styleClass="editButton"
								tagName="li">
								<xp:this.attrs>
									<xp:attr name="onclick">
										<xp:this.value><![CDATA[#{javascript:"openDocument('mActivate.xsp?action=editDocument&documentId=" + docIncident.getDocument().getUniversalID() + "', 'contentwrapper');"}]]></xp:this.value>
									</xp:attr>
								</xp:this.attrs>
								<span>Edit</span>
							</xp:panel>
							<xp:panel id="closebutton" styleClass="cancelButton" tagName="li">
								<xp:this.attrs>
									<xp:attr name="onclick">
										<xp:this.value><![CDATA[#{javascript:"$.blockUI();window.location.href='mIncidents.xsp';"}]]></xp:this.value>
									</xp:attr>
								</xp:this.attrs>
								<span>Close</span>
							</xp:panel>
						</xp:panel>
						
				
						<ul class="fieldlist">
							<li>
								<xp:label value="Description" id="namelabel"
									for="description">
								</xp:label>
								<xp:text escape="true" id="description"
									value="#{docIncident.description}">
								</xp:text>
		
							</li>
							<li>
								<xp:label value="Site" id="label1"
									for="siteId">
								</xp:label>
								<xp:text escape="true" id="siteId"
									value="#{docIncident.siteName}">
								</xp:text>
							</li>
							<li>
								<xp:label value="Org unit" id="label4"
									for="orgUnitId">
								</xp:label>
								<xp:text escape="true" id="orgUnitId"
									value="#{docIncident.orgUnitName}">
								</xp:text>
							</li>
							
							<li>
								<xp:label value="Plan" id="label7"
									for="planName">
								</xp:label>
								<xp:text escape="true" id="planName"
									rendered="#{javascript:docIncident.getItemValueString('scenarioId')!='none'}"
									value="#{docIncident.planName}">
								</xp:text>
								<xp:text escape="true" id="computedField3"
									rendered="#{javascript:docIncident.getItemValueString('scenarioId')=='none'}"
									value="-none-">
								</xp:text>
							</li>
		
							<li>
								<xp:label value="Scenario" id="label2"
									for="scenarioId">
								</xp:label>
								<xp:text escape="true" id="scenarioId"
									rendered="#{javascript:docIncident.getItemValueString('scenarioId')!='none'}"
									value="#{docIncident.scenarioName}">
								</xp:text>
								<xp:text escape="true" id="computedField1"
									rendered="#{javascript:docIncident.getItemValueString('scenarioId')=='none'}"
									value="-none-">
								</xp:text>
							</li>
		
							<li>
		
								<xp:label value="Alert level" id="label3"
									for="alertLevel">
								</xp:label>
								<xp:text escape="true" id="alertLevel"
									value="#{javascript:var level = docIncident.getItemValueString('alertLevel');
									if (level == 'elevated') {
										return 'Elevated';
									} else if (level == 'high') {
										return 'High alert';
									} else {
										return 'Normal';
									}}">
								</xp:text>
		
							</li>
		
							<li>
		
								<xp:label value="Status" id="label6"
									for="status">
								</xp:label>
								<xp:text escape="true" id="status"
									value="#{javascript:@ProperCase( docIncident.getItemValueString('status') )}">
								</xp:text>
		
							</li>
		
							<li>
		
								<xp:label value="Exercise" id="label5" for="isRehearsal">
								</xp:label>
								<xp:text escape="true" id="isRehearsal"
									value="#{javascript:(docIncident.getItemValueString('isRehearsal').equals('yes') ? 'Yes' : 'No')}">
								</xp:text>
		
							</li>
		
						</ul>
						
						
						
					</div>
				
					<xp:div styleClass="box mTop">
						<xp:this.rendered><![CDATA[#{javascript:sessionScope.get('isEditor') && docIncident.getItemValueString('status').equals('active')}]]></xp:this.rendered>

						<ul class="buttons">
							<li class="buttonBlue">
								<xp:link escape="true" text="" value=""
									id="link1">
									
									<xp:this.attrs>
									<xp:attr name="onClick">
										<xp:this.value><![CDATA[#{javascript:"loadPageEx('" + getDbPath() + "/mNotify.xsp?incidentId=" + docIncident.getDocument().getUniversalID() + "', 'contentwrapper', 8, false, true); return false;"}]]></xp:this.value>
									</xp:attr>
								</xp:this.attrs>
									<span>Notify team</span>
								</xp:link>

							</li>

							<li class="buttonBlue">
								<xp:link escape="true" text=""
									id="link2" value="mCallTree.xsp">
									<span>Call tree</span>
								</xp:link>
							</li>
						</ul>

						<!-- deactivate button -->
						<xp:div>
							<ul class="buttons">
								<li class="buttonBlue">
									<xp:link escape="true" value="#"
										text="" id="link3">
										<xp:this.attrs>
											<xp:attr name="onclick">
												<xp:this.value><![CDATA[#{javascript:javascript:if (applicationScope.isReadOnlyMode) {
	"alert('Continuity is running in read only mode.\\n\\nYou cannot deactivate this incident.'); return false;";
} else {
												"deactivateIncident('" + docIncident.getDocument().getUniversalID() + "','" + viewScope.numOpenTasks + "'); return false;"
												}
												}]]></xp:this.value>
											</xp:attr>
										</xp:this.attrs>
										<span>Deactivate</span>
									</xp:link>

								</li>
							</ul>
						</xp:div>

					</xp:div>

					<div class="mTop">
				
					<xc:mTasksList showStatus="true"
						viewName="vwTasksByParentByTaskCat">
						<xc:this.categoryFilter><![CDATA[#{javascript:docIncident.getItemValueString("id")}]]></xc:this.categoryFilter>
					</xc:mTasksList>
					
					</div>
					
		</xp:panel>
	</xp:this.facets>
	</xc:mLayout>		
		
	
</xp:view>
